<definition xmlns="http://definition.nexusformat.org/nxdl/3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" category="base" name="NXbeam" extends="NXobject" type="group" xsi:schemaLocation="http://definition.nexusformat.org/nxdl/3.1 ../nxdl.xsd">
    <doc>
         This is a test for nymaType
    </doc>
    <field name="distance" type="NX_FLOAT" units="NX_LENGTH" nameType="specific">
        <doc>
             Distance from sample
        </doc>
    </field>
    <field name="NAMEOFENERGY_energy" type="NX_FLOAT" units="NX_ENERGY" nameType="partial">
        <doc>
             Energy on entering beamline component
        </doc>
        <dimensions rank="1">
            <dim index="1" value="i"/>
        </dimensions>
    </field>
    <group name="INSTRUMENT" type="NXinstrument" nameType="specific">
        <doc>
             Instrument definition
        </doc>
        <attribute name="VENDOR" nameType="any">
            <doc>
                 Vendor of the instrument
            </doc>
        </attribute>
    </group>
</definition>
